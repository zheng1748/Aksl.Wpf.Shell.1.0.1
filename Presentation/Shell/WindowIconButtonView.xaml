<UserControl x:Class="Aksl.Modules.Shell.Views.WindowIconButtonView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             xmlns:ei="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:materialDesign="clr-namespace:Aksl.Toolkit.Controls;assembly=Aksl.Toolkit.Controls">
    <StackPanel HorizontalAlignment="Right"
                Margin="0,0,10,0"
                Orientation="Horizontal"
                WindowChrome.IsHitTestVisibleInChrome="True">
        <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                Width="{Binding Path=Content.Width,RelativeSource={RelativeSource Mode=Self}}"
                Height="{Binding Path=Content.Height,RelativeSource={RelativeSource Mode=Self}}"
                Command="{Binding Source={x:Static SystemCommands.ShowSystemMenuCommand}}"
                ToolTip="Show SystemMenu"
                Cursor="Arrow"
                Margin="0,0,0,0"
                Padding="0,0,2,0">
            <Button.Content>
                <Image Source="{Binding Path=Icon,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type Window}}}"
                       Stretch="Uniform"
                       Height="20"
                       Width="30"
                       Margin="2,0"
                       IsHitTestVisible="False" />
            </Button.Content>
        </Button>
        <Button Content="{materialDesign:PackIcon Kind=WindowMinimize,Size=25}"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                Width="{Binding Path=Content.Height,RelativeSource={RelativeSource Mode=Self}}"
                Height="{Binding Path=Content.Height,RelativeSource={RelativeSource Mode=Self}}"
                Command="{Binding Source={x:Static SystemCommands.MinimizeWindowCommand}}"
                Margin="0,0,0,0"
                Padding="0,0,2,0">
        </Button>
        <Button Content="{materialDesign:PackIcon Kind=WindowRestore,Size=20}"
                Width="{Binding Path=Content.Height,RelativeSource={RelativeSource Mode=Self}}"
                Height="{Binding Path=Content.Height,RelativeSource={RelativeSource Mode=Self}}"
                Command="{Binding Source={x:Static SystemCommands.RestoreWindowCommand}}"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                Margin="0,0,0,0"
                Padding="0,0,2,0">
        </Button>
        <Button Content="{materialDesign:PackIcon Kind=WindowClose,Size=20}"
                Width="{Binding Path=Content.Height,RelativeSource={RelativeSource Mode=Self}}"
                Height="{Binding Path=Content.Height,RelativeSource={RelativeSource Mode=Self}}"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                Margin="0,0,0,0"
                Padding="0,0,2,0">
            <ei:Interaction.Triggers>
                <ei:EventTrigger EventName="Click">
                    <ei:CallMethodAction TargetObject="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type Window}}}"
                                         MethodName="Close" />
                </ei:EventTrigger>
            </ei:Interaction.Triggers>
        </Button>
    </StackPanel>
</UserControl>
